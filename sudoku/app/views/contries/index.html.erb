<div class="container">
<p id="notice"><%= notice %></p>

<h1>Contries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Continent</th>
      <th>Cont image</th>
      <th>Cont name</th>
      <th>Center</th>
      <th>Pop</th>
      <th>Area</th>
      <th>Money</th>
      <th>Lang</th>
      <th>Religion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contries.each do |contry| %>
      <tr>
        <td><%= contry.continent %></td>
        <td><%= image_tag "#{contry.cont_image}"%></td>
        <td><%= contry.cont_name %></td>
        <td><%= contry.center %></td>
        <td><%= contry.pop %></td>
        <td><%= contry.area %></td>
        <td><%= contry.money %></td>
        <td><%= contry.lang %></td>
        <td><%= contry.religion %></td>
        <td><%= link_to 'Show', contry %></td>
        <td><%= link_to 'Edit', edit_contry_path(contry) %></td>
        <td><%= link_to 'Destroy', contry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contry', new_contry_path %>
</div>
