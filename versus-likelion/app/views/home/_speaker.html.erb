<% if @speakers.length != 0 %>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <% @first_id = @speakers[0].post_id %>
    <% @speaker_first = Post.where(:id => @first_id).first %>
    <% limit = @speakers.length; %>
    <div class="carousel-inner">
      <div class="item active">
        <a href="/posts/<%=@first_id %>" class="speaker-link" style="text-decoration:none; color:black;">
          <% if @speaker_first.first_choice_label && @speaker_first.second_choice_label != ""%>
            <span class="first"><strong style=" font-weight: 900;border-bottom: solid;"><%= @speaker_first.first_choice_label %></strong></span>
            <span class="versus">VS</span>
            <span class="second"><strong style=" font-weight: 900;border-bottom: solid;"><%= @speaker_first.second_choice_label %></strong></span>
            <p class="speaker-title"><%= @speaker_first.title %></p>
          <% else %>
            <p class="speaker-title-only"><%= @speaker_first.title %></p>
          <% end %>
        </a>
      </div>
      <% if limit >1 %>
        <% for i in 1...limit %>
          <% @post_id = @speakers[i].post_id %>
          <% @speaker = Post.where(:id => @post_id).first %>
            <div class="item">
              <a href="/posts/<%=@post_id %>" style="text-decoration:none; color:black;">
                <% if @speaker.first_choice_label && @speaker.second_choice_label != "" %>
                  <span class="first"><strong style="font-weight: 900;border-bottom: solid;"><%= @speaker.first_choice_label %></strong></span>
                  <span class="versus">VS</span>
                  <span class="second"><strong style="font-weight: 900;border-bottom: solid;"><%= @speaker.second_choice_label %></strong></span>
                  <p class="speaker-title"><%= @speaker.title %></p>
                <% else %>
                  <p class="speaker-title-only"><%= @speaker.title %></p>
                <% end %>
              </a>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% end %>
<style>
  .first{
    font-size:50px;
    text-align:center;
    float:left;
    width: 40%;
    text-overflow: ellipsis;
    overflow: hidden;
  }
  .second{
    font-size:50px;
    float:right;
    text-align:center;
    display:inline-block;
    width: 40%;
    text-overflow: ellipsis;
    overflow: hidden;
  }
  .versus{
    font-size:40px;
    display:inline-block;
    width: 10%;
    margin-right:5%;
    margin-left:5%;
    margin-top: 10px;
  }
  
  .speaker-title{
      font-size:30px;
      padding-top:40px;
      text-align:center;
  }
  .speaker-title-only{
      font-size:30px;
      padding-top:50px;
      padding-bottom:50px;
      text-align:center;
  }
  .item {
      text-align:center;
      padding-top: 73px;
      padding-bottom: 73px;
      /*padding-top:80px;*/
      /*padding-bottom: 57px;*/
  }
  .item:hover {
    background-color:#90D9DA;
    opacity: 1;
    border-radius:8px;
    
  }
    .carousel-control.right{
        background-image:none;
    }
    .carousel-control.left{
        background-image:none;
    }
    #banner{
      background-color:#FFE604;
      padding-top: 51px;
    }
    #banner img{
      width: 100%;
      height: auto;
      padding-bottom:38px;
    }
    div#banner{
